{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "alwaysStrict": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["@cloudflare/workers-types", "jest", "node"]
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
